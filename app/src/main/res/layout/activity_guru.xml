<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/backIcon_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:contentDescription="@string/back_icon"
            android:src="@drawable/backicon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:fontFamily="@font/inter_variable"
            android:importantForAccessibility="no"
            android:text="Share your wisdom"
            android:textColor="@color/charcoal"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />


        <ImageView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:src="@drawable/backicon"
            android:visibility="invisible" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/charcoal"
        android:text="Guide and inspire"
        android:fontFamily="@font/inter_variable"
        android:layout_marginTop="10dp"
        tools:ignore="HardcodedText" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="55dp"
        android:background="@drawable/txtbackground"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/Spinner_Id"
            android:layout_width="325dp"
            android:layout_height="43dp"
            android:alpha="0.5"
            android:backgroundTint="@color/blue"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            android:paddingHorizontal="13dp"
            android:popupBackground="@color/white"
            android:popupElevation="5dp"
            tools:ignore="TouchTargetSizeCheck" />
    </com.google.android.material.textfield.TextInputLayout>
    <View
        android:layout_width="325dp"
        android:layout_height="1dp"
        android:background="@drawable/dividerbackground"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNext"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/blue"
        android:drawableEnd="@drawable/right_arrow"
        android:paddingHorizontal="116dp"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp"
        tools:ignore="SpUsage,TextContrastCheck,TextSizeCheck,TouchTargetSizeCheck" />


</LinearLayout>